{% extends 'base.html.twig' %}

{% block title %}Salle index{% endblock %}

{% block body %}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.11.4/datatables.min.css"/>
    <script 
        src="https://code.jquery.com/jquery-3.6.0.min.js" 
        integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" 
        crossorigin="anonymous">
    </script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.11.4/datatables.min.js"></script>

    <div class="row">
                <div class="col-3">
                    <ul class="nav justify-content-start">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="{{ path('app_controle_new') }}">Ajouter</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="">Nettoyer</a>
                        </li>
                    </ul>
                </div>
                <div class="col-5 offset-1">
                    <ul class="nav justify-content-left">
                        <li class="nav-item">
                            <h1>Liste des Salles</h1>
                        </li>
                    </ul>
                </div>
            </div>
    
    <h1>Salle index</h1>

    <table id="tableau" class="display" style="width:100%">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Amphi</th>
                <th>NbPlace</th>
                <th>EmplacementPrise</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for salle in salles %}
            <tr>
                <td>{{ salle.Nom }}</td>
                <td>{{ salle.Amphi ? 'Yes' : 'No' }}</td>
                <td>{{ salle.NbPlace }}</td>
                <td>{{ salle.emplacementPrise }}</td>
                <td>
                    <a href="{{ path('app_salle_show', {'id': salle.id}) }}">show</a>
                    <a href="{{ path('app_salle_edit', {'id': salle.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_salle_new') }}">Create new</a>
{% endblock %}


    