<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome les boysss!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}

        {#{{ encore_entry_script_tags('app') }}#}
            {#DATATABLES#}
            <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.11.4/datatables.min.css"/>
            <script 
                src="https://code.jquery.com/jquery-3.6.0.min.js" 
                integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" 
                crossorigin="anonymous">
            </script>
            <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.11.4/datatables.min.js"></script>
        

        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}
        <style>
            #bandeau {
                    border-bottom: 1px solid black;
                }
        </style>

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
            {#DATATABLES#}
            <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.11.4/datatables.min.css"/>
            <script 
                src="https://code.jquery.com/jquery-3.6.0.min.js" 
                integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" 
                crossorigin="anonymous">
            </script>
            <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.11.4/datatables.min.js"></script>
            <script type="text/javascript" src="../../papaparse.min.js"></script>
        {% endblock %}
    </head>
    <body>
    {% block nav %}
            <div id="bandeau" class="row">
                <div class="col-3">
                    <ul class="nav justify-content-start">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/controle/">Contrôle</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/mail/">Mail</a>
                        </li>
                    </ul>
                </div>
                <div class="col-5 offset-1">
                    <ul class="nav justify-content-left">
                        <li class="nav-item">
                            <a class="nav-link" href="/promotion/">Promotions</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/etudiant/">Etudiants</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/module/">Modules</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/enseignant/">Enseignants</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/salle/">Salles</a>
                        </li>
                    </ul>
                </div>

                <div class="col-2 offset-1">
                    <ul class="nav justify-content-end">
                        {% if is_granted('IS_AUTHENTICATED_FULLY')%}
                            <li class="nav-item">
                                <a class="nav-link" href="/logout">Se déconnecter</a>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a class="nav-link" href="/inscription">S'inscrire</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/login">Se connecter</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        {% endblock %}
        <script type="text/javascript">
                $(document).ready( function () {
                    $('#example').DataTable();
                } );
        </script>
        {% block body %}{% endblock %}
        {% block javascriptsFinTab %}
        <script type="text/javascript">
                $(document).ready(function() {
                    $('#tableau').DataTable();
                } );
        </script>
        {% endblock %}
    </body>
</html>